---
import {Image} from "astro:assets";
import ProfileImage from '../images/karol_24.jpg';
import "../styles/fonts.css";
import "../styles/general.css";
const {lang} = Astro.props;
---

<html lang={lang ?? 'en'}>
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Karol Krakowiak</title>
    <meta name="description" content="Karol Krakowiak – Product Designer & Web Developer"/>
    <meta property="og:url" content="https://karol.id"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="Karol Krakowiak"/>
    <meta property="og:description" content="Karol Krakowiak – Product Designer & Web Developer"/>
    <meta property="og:image" content="https://karol.id/images/preview.jpg"/>
    <meta name="twitter:card" content="summary_large_image"/>
    <meta property="twitter:domain" content="karol.id"/>
    <meta property="twitter:url" content="https://karol.id"/>
    <meta name="twitter:title" content="Karol Krakowiak"/>
    <meta name="twitter:description" content="Karol Krakowiak – Product Designer & Web Developer"/>
    <meta name="twitter:image" content="https://karol.id/images/preview.jpg"/>
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=figtree:400&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5e31d3fb3d.js" crossorigin="anonymous"></script>
    <script defer type="text/javascript" src="https://api.pirsch.io/pirsch-extended.js" id="pirschextendedjs"
            data-code="CvrEJEoyRIS1AbrakL300q15J6usWNo9"></script>
</head>
<body class="bg-slate-100 dark:bg-slate-900 text-slate-900 dark:text-white tracking-tight">
<main class="max-w-xl mx-auto px-4 py-10 grid grid-cols-1 gap-10">
    <header class="space-y-4">
        <figure>
            <Image src={ProfileImage} alt="Karol Krakowiak" width={128} height={128} densities={[2, 3]} class="block rounded-full mx-auto w-32 aspect-square shadow-md shadow-slate-300 dark:shadow-black"/>
        </figure>
        <div class="font-heading text-center">
            <h1 class="text-xl xs:text-3xl lg:text-5xl font-extrabold leading-none">Karol Krakowiak</h1>
            <p class="xs:text-lg lg:text-xl text-slate-700 dark:text-slate-300 leading-tight">
                Product Designer & Web Developer
            </p>
        </div>
    </header>

    <slot/>

    <footer class="text-center">
        <a href="https://karolkrakowiak.pl/?ref=karol.id" target="_blank"
           class="text-sm text-slate-900 dark:text-white group relative flex justify-center">
            <i class="fa-kit fa-karolkrakowiak fa-xl block group-hover:hidden absolute" title="Karol Krakowiak"></i>
            <i class="fa-kit fa-panda fa-xl scale-125 transform hidden group-hover:block absolute" title="Karol Krakowiak"></i>
        </a>
    </footer>
</main>
</body>
</html>