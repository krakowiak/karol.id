---
const { title } = Astro.props;
---

<section
    class="bg-slate-200 dark:bg-slate-800 p-6 lg:p-8 grid grid-cols-1 gap-2 rounded-3xl"
>
    <header>
        <h2 class="font-heading text-xl font-medium">
            {title}
        </h2>
    </header>
    <div class="grid grid-cols-1 gap-2">
        <slot />
    </div>
</section>
